<html>
    <head>
        <style>
@charset "UTF-8";
@font-face {
  font-family: "Source Sans Pro";
  src: url("templates/generic/fonts/SourceSansPro-Regular.ttf") format("ttf");
}
@font-face {
  font-family: "Pacifico";
  src: url("templates/generic/fonts/Pacifico-Regular.ttf") format("ttf");
}
@page {
    margin: 3cm;
    @bottom-left {
        color: #f44242;
        font-family: Pacifico;
        content: '{{ t(n="thank_you") }}!';
    }
    @bottom-right {
        color: #aa99aa;
        content: 'Technokrat GmbH | Unterrohrstrasse 5 | CH-8952 Schlieren | Switzerland';
        font-size: 9pt;
    }
}

html {
    color: #14213d;
    font-family: Source Sans Pro;
    font-size: 11pt;
    line-height: 1.6;
}

html body {
    margin: 0;
}

html p {
    text-align: justify;
}

html #logo {
    height: 1.7cm;
    position: absolute;
    right: 0;
    top: -1cm;
}

html address {
    font-style: normal;
    white-space: pre-line;
}

html address#from {
    margin-top: 2.8cm;
    color: #aa99aa;
}

html address#to {
    text-align: left;
}

html dl {
    text-align: right;
    margin-top: -1.9cm;
    margin-bottom: 2.4cm;
}

html dl dt, html dl dd {
    display: inline;
    margin: 0;
    position: absolute;
    right: 0;
}

html dl dt {
    position: absolute;
    right: 2cm;
    color: #aa99aa;
}


html dl dt::after {
    content: ':';
}

html table {
    border-collapse: collapse;
    width: 100%;
}

html table th {
    border-bottom: .2mm solid #aa99aa;
    color: #aa99aa;
    font-size: 10pt;
    font-weight: 400;
    padding-bottom: .25cm;
    text-transform: uppercase;
}

html table td {
    padding-top: 1mm;
}

html table th:first-of-type, html table td:first-of-type {
    text-align: left;
}

html table th:last-of-type, html table td:last-of-type {
    text-align: right;
}

html table#total {
    background: #f6f6f6;
    border-color: #f6f6f6;
    border-style: solid;
    border-width: 0.5cm 3cm;
    bottom: 0;
    font-size: 15pt;
    margin: 0 -3cm;
    margin-bottom: -0.5cm;
    position: absolute;
    width: 18cm;
}

html table#total tr td {
    vertical-align: top;
}

html #small-address {
    margin-top: 0.2cm;
    margin-bottom: 0.2cm;
    font-size: 10pt;
    line-height: 1rem;
}

#logo {
    width: 15em;
}

.underline {
    margin-top: -1em;
    margin-bottom: 2em;
    height: 1px;
    width: 100%;
    background: 
        linear-gradient(
            to right, 
            #f44242,
            white
        );
}
        </style>
    </head>
    <body>
        <img id="logo" src="templates/banner.svg" />

        <address id="from">Technokrat GmbH | Unterrohrstrasse 5 | CH-8952 Dietikon</address>

        <address id="to">
            {{ data.address }}
        </address>

        <h3>{{ t(n="invoice") }} {{ data.no }}</h3>
        <div class="underline"></div>

        <p>
            {{ data.text }}
        </p>

        <table>
            <thead>
                <th>{{ t(n="position") }}</th>
                <th>{{ t(n="description") }}</th>
                <th>{{ t(n="amount") }}</th>
                <th>{{ t(n="price") }}</th>
                <th>{{ t(n="total") }}</th>
            </thead>
            <tbody>
                {% for position in data.positions %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ position.text }}</td>
                    <td>{{ position.count }}</td>
                    <td>{{ position.cost }} {{ position.currency }}</td>
                    <td>{{ position.count * position.cost }} {{ position.currency }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <table id="total">
            <thead>
                <th>{{ t(n="due_on") }}</th>
                <th>{{ t(n="account_info") }}</th>
                <th>{{ t(n="total") }}</th>
            </thead>
            <tbody>
                <tr>
                    <td>{{ data.due }}</td>
                    <td>
                        CH47 0900 0000 6119 7724 7<br>
                    </td>
                    <td>
                    CHF
                    </td>
                </tr>
                <tr>
                    <td colspan=3>
                        {# <p id="small-address">
                            Technokrat GmbH |
                            Unterrohrstrasse 5 |
                            CH-8952 Schlieren |
                            Switzerland
                        </p> #}
                    </td>
                </tr>
            </tbody>
        </table>
    </body>
</html>